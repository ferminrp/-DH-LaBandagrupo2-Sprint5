<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
            <title>Wave Runners</title>
            <link rel="stylesheet" href="../styles/producto.css">
            <link rel="stylesheet" href="../styles/main.css">
    </head>

    <body>
        <%- include('../partials/header') %>


        <main>
            <section class="product">
                <article class="product-images">
                    <!-- <div class="images-second">
                        <img src="../images/producto/<%= product.imagen %>">
                        <img src="../images/producto/<%= product.imagen %>">
                        <img src="../images/producto/<%= product.imagen %>">
                    </div> -->
                    <div class="images-first">
                        <img src="../images/producto/<%= product.imagen %>">
                    </div>
                </article>
                <article class="product-detalle">
                    <h3 class="product-name"><%= product.nombre_producto %></h3>
                    <h2 class="product-price"><%= product.precio %></h2>
                    <br>
                    <h4 class="product-form-title">DETALLE</h4>
                    <form action="#" method="POST" class="product-form">
                        <label>COLOR</label>
                        <select name="color">
                            <option value="color01">01</option>
                            <option value="color02">02</option>
                            <option value="color03">03</option>
                        </select>
                        <label>MEDIDA</label>
                        <select name="medida">
                            <option value="medida01">01</option>
                            <option value="medida02">02</option>
                            <option value="medida03">03</option>
                        </select>
                        <label>CANTIDAD</label>
                        <select name="cantidad">
                            <option value="cantidad01">01</option>
                            <option value="cantidad02">02</option>
                            <option value="cantidad03">03</option>
                        </select>
                        <div>
                            <button type="submit">COMPRAR AHORA</button>
                            <button type="submit">AGREGAR AL CARRITO</button>
                        </div>
                    </form>
                </article>
            </section>
            <section>
                <article>
                    <div class="product-icons">
                        <i class="fab fa-twitter"></i>
                        <i class="fab fa-facebook-f"></i>
                        <i class="fab fa-whatsapp"></i>
                    </div>
                    <h4 class="product-info-title">DESCRIPCION</h4>
                    <p class="product-info">
                        <%= product.descripcion %>
                    </p>
                </article>
            </section>
            <section>
                <article class="edit-bottom">
                    <form action="/products/<%= product.id %>/edit" method="GET">
                        <button type="submit">EDITAR PRODUCTO</button>
                    </form>
                </article>
            </section>
            <section>
                <h4 class="product-related-title">PRODUCTOS RELACIONADOS</h4>
                <article class="product-related">
                    <div class="product-related-son">
                        <img src="../images/producto/<%= product.imagen %>">
                        <p class="related-name"><%= product.nombre_producto %></p>
                        <div class="related-price"><%= product.precio %></div>
                    </div>
                    <div class="product-related-son">
                        <img src="../images/producto/<%= product.imagen %>">
                        <p class="related-name"><%= product.nombre_producto %></p>
                        <div class="related-price"><%= product.precio %></div>
                    </div>
                    <div class="product-related-son">
                        <img src="../images/producto/<%= product.imagen %>">
                        <p class="related-name"><%= product.nombre_producto %></p>
                        <div class="related-price"><%= product.precio %></div>
                    </div>
                </article>
            </section>
        </main>


        <%- include('../partials/footer') %>

    </body>

</html>